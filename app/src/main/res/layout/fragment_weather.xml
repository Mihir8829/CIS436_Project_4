<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherFragment">

    <TextView
        android:id="@+id/tvCityName"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:text="Detroit"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <TextView
        android:id="@+id/tvFeelsLikeTemperature"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:text="63°F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageFeelsLikeTemperature" />

    <ImageView
        android:id="@+id/imageWeather"
        android:layout_width="147dp"
        android:layout_height="142dp"
        android:layout_marginTop="184dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/thunderstorm" />

    <ImageView
        android:id="@+id/imageFeelsLikeTemperature"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPrecipitation"
        tools:src="@drawable/feelslike" />

    <TextClock
        android:id="@+id/tcCurrentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="8dp"
        android:text="10:35 PM"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvDailySummary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.877" />

    <TextView
        android:id="@+id/tvHumidity"
        android:layout_width="32dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:text="33%"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageHumidity" />

    <ImageView
        android:id="@+id/imageUVIndex"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/imageHumidity"
        app:layout_constraintStart_toEndOf="@+id/imageFeelsLikeTemperature"
        app:layout_constraintTop_toBottomOf="@+id/tvTemperatureToday"
        tools:src="@drawable/uvindex" />

    <ImageView
        android:id="@+id/imagePrecipitation"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/tvTemperatureToday"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageWeather"
        tools:src="@drawable/precipitation" />

    <TextView
        android:id="@+id/tvUVIndex"
        android:layout_width="82dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:text="Moderate"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/tvHumidity"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toEndOf="@+id/tvFeelsLikeTemperature"
        app:layout_constraintTop_toBottomOf="@+id/imageUVIndex" />

    <TextView
        android:id="@+id/tvPrecipitation"
        android:layout_width="36dp"
        android:layout_height="20dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:text="3.2 in"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePrecipitation" />

    <TextView
        android:id="@+id/tvWindSpeed"
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:text="2mph"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageWindSpeed" />

    <TextView
        android:id="@+id/tvCurrentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="8dp"
        android:text="2024-04-22"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvDailySummary"
        app:layout_constraintEnd_toStartOf="@+id/tcCurrentTime"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.877" />

    <TextView
        android:id="@+id/tvTemperatureToday"
        android:layout_width="123dp"
        android:layout_height="66dp"
        android:layout_marginTop="12dp"
        android:text="65°F"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageWeather" />

    <ImageView
        android:id="@+id/imageWindSpeed"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvTemperatureToday"
        app:layout_constraintTop_toBottomOf="@+id/imageWeather"
        tools:src="@drawable/wind" />

    <TextView
        android:id="@+id/tvDailySummary"
        android:layout_width="198dp"
        android:layout_height="27dp"
        android:layout_marginTop="144dp"
        android:text="Currently Thunderstorming"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageHumidity"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWindSpeed"
        tools:src="@drawable/humidity" />

    <TextView
        android:id="@+id/tvTommorow"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:text="Tommorow"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvDayAfterTommorow"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:layout_marginBottom="16dp"
        android:text="Tuesday"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvTwoDaysAfterTommorow"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/tvTommorow" />

    <TextView
        android:id="@+id/tvTwoDaysAfterTommorow"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:text="Wednesday"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageTommorowWeather"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        tools:src="@drawable/partlysunny" />

    <TextView
        android:id="@+id/tvTemperatureTommorow"
        android:layout_width="70dp"
        android:layout_height="31dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="67°F"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tvTommorow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageTommorowWeather"
        app:layout_constraintVertical_bias="0.476" />

    <ImageView
        android:id="@+id/imageDayAfterTommorowWeather"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/imageTwoDaysAfterTommorowWeather"
        app:layout_constraintStart_toEndOf="@+id/imageTommorowWeather"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        tools:src="@drawable/cloudy" />

    <TextView
        android:id="@+id/tvTemperatureDayAfterTommorow"
        android:layout_width="70dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:text="69°F"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tvDayAfterTommorow"
        app:layout_constraintEnd_toStartOf="@+id/tvTemperatureTwoDaysAfterTommorow"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/tvTemperatureTommorow"
        app:layout_constraintTop_toBottomOf="@+id/imageDayAfterTommorowWeather"
        app:layout_constraintVertical_bias="0.476" />

    <ImageView
        android:id="@+id/imageTwoDaysAfterTommorowWeather"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        tools:src="@drawable/thunderstorm" />

    <TextView
        android:id="@+id/tvTemperatureTwoDaysAfterTommorow"
        android:layout_width="70dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:text="55°F"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tvTwoDaysAfterTommorow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageTwoDaysAfterTommorowWeather"
        app:layout_constraintVertical_bias="0.476" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.765" />

</androidx.constraintlayout.widget.ConstraintLayout>